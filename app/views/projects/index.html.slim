= link_to refresh_projects_path, method: :put, class: 'btn btn-primary pull-right' do
  span.glyphicon.glyphicon-refresh'
  | Refresh

h1 Submitted
.well.card
  table.table.table-striped
    thead
      th Project
      th User
    tbody
      - @projects['submitted'] && @projects['submitted'].each do |project|
        tr
          td= link_to project.lesson.instance_variable_get(:@title), "https://github.com/#{project.user.username}/codelab-#{project.lesson.instance_variable_get(:@key)}", target: '_blank'
          td= project.user.username

h1 Started
.well.card
  table.table.table-striped
    thead
      th Project
      th User
    tbody
      - @projects['started'] && @projects['started'].each do |project|
        tr
          td= project.lesson.instance_variable_get(:@title)
          td= project.user.username
